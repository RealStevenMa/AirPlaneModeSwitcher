<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="name.tanglei.airplaneswitcher"
    android:installLocation="preferExternal"
    android:versionCode="2"
    android:versionName="0.9" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS"/> -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_lancher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <receiver
            android:name="name.tanglei.airplaneswitcher.receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
        <receiver android:name="name.tanglei.airplaneswitcher.receiver.BootBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="name.tanglei.airplaneswitcher.ui.TaskDetailActivity"
            android:label="@string/action_save" >
        </activity>
        <activity
            android:name="name.tanglei.airplaneswitcher.ui.ReceivedAction"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="name.tanglei.airplaneswitcher.ui.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="name.tanglei.airplaneswitcher.ui.OperationLogActivity"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService" >
        </service>

        <activity
            android:name="com.umeng.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity android:name="com.umeng.fb.ConversationActivity" />

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="54bb18d5fd98c56530001cd6" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="blog" />
    </application>

</manifest>