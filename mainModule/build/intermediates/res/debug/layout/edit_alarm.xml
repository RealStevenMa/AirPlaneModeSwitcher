		        <RadioButton
		            android:id="@+id/idRadioOff"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/txtTypeClosed" />
	        </RadioGroup>
        </LinearLayout>
    </LinearLayout>

